/* pages/collect/collect.wxss */

.book-all {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.book-list {
  position: relative;
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  width: 190rpx;
  /* border: 1px solid #000; */
}

.book-list .book-img {
  width: 190rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.book-list .book-title {
  font-size: 24rpx;
  height: 64rpx;
  width: 190rpx;
  margin-top: 5rpx;
  line-height: 32rpx;
  text-align: left;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.bottom {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  margin-top: 20rpx;
}

.bottom .bottom-text {
  position: absolute;
  /* top: 50%; */
  text-align: center;
  font-size: 24rpx;
  width: 200rpx;
  z-index: 998;
  background-color: #fff;
}

.bottom .bottom-line {
  position: absolute;
  top: 50%;
  /* left: 50%;
  transform: translate(-50%, -50%); */
  width: 600rpx;
  height: 1rpx;
  background-color: #ccc;
}

.book-list .del-btn {
  position: absolute;
  bottom: 0;
  right: 0;
}

.container .book-all .dis-none {
  display: none;
}

.container .bottom .dis-none {
  display: none;
}

.bottom .bootom-btn {
  display: flex;
  justify-content: space-between;
  position: absolute;
  top: -15rpx;
  width: 520rpx;
  height: 50rpx;
  text-align: center;
}

.bootom-btn .bottom-cancel {
  line-height: 50rpx;
  color: #fff;
  background-color: #ccc;
}

.bootom-btn .bottom-del-btn {
  line-height: 50rpx;
  background-color: #ff0052;
  color: #fff;
}

/* 未登录时 */

.no-login {
  position: fixed;
  top:36%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 998;
  width: 250rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.no-login .no-login-img {
  width: 200rpx;
  height: 200rpx;
}

.no-login .no-login-title {
  font-size: 24rpx;
  color: #0ecae9;
}
