.datails .book-datails {
  padding: 20rpx 20rpx 40rpx 20rpx;
  border-bottom: 8rpx solid #e9e9e9;
}

.book-t {
  display: flex;
  justify-content:first baseline;
  font-size: 12px;
  color: #333;
}

.book-t .img {
  width: 220rpx;
  height: 280rpx;
}

.book-t .main-msg {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-t .title {
  font-size: 14px;
  font-weight: 700;
}

.book-b {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.book-b .btn {
  margin: 0;
  width: 320rpx;
  font-size: 12px;
  background-color: #e9e9e9;
  border: 1px solid #ccc;
}

.book-desc {
  padding: 20rpx;
  font-size: 12px;
  line-height: 1.5;
  border-bottom: 2px solid #ccc;
}

.book-desc .top {
  font-weight: 700;
  font-size: 16px;
  line-height: 20px;
  height: 20px;
  padding-left: 10rpx;
  border-left: 2px solid #444;
}

.book-desc .desc-main {
  margin-top: 30rpx;
  font-size: 12px;
  line-height: 1.5;
  color: #555;
}

.book-catalog {
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 2px solid #ccc;
}

.book-catalog .catalog-l {
  width: 220rpx;
  display: flex;
  justify-content: space-between;
}

.book-catalog .catalog-l .show-catalog {
  font-size: 15px;
  font-weight: 700;
  color: #333;
}

.catalog-l .catalog {
  font-size: 12px;
  color: #666;
}

.book-catalog .update-time {
  font-size: 12px;
  color: #555;
}

.read-btn-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.2);
}

